generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum MembershipRole {
  owner
  admin
  member
}

enum EmailTokenType {
  magic_login
  verify_email
  password_reset
}

enum OAuthProvider {
  google
  github
}

enum SubscriptionPlan {
  free
  pro
}

enum SubscriptionStatus {
  inactive
  trialing
  active
  past_due
  canceled
  unpaid
}

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  pendingEmail    String?   @map("pending_email")
  pendingEmailRequestedAt DateTime? @map("pending_email_requested_at")
  username        String?   @unique
  firstName       String?   @map("first_name")
  lastName        String?   @map("last_name")
  avatarUrl       String?   @map("avatar_url")
  phoneNumber     String?   @map("phone_number")
  country         String?
  deletedAt       DateTime? @map("deleted_at")
  passwordHash    String?   @map("password_hash")
  activeOrganizationId String? @map("active_organization_id")
  emailVerifiedAt DateTime? @map("email_verified_at")
  lastLoginAt     DateTime? @map("last_login_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  memberships   Membership[]
  activeOrganization Organization? @relation("UserActiveOrganization", fields: [activeOrganizationId], references: [id], onDelete: SetNull)
  sessions      Session[]
  oauthAccounts OAuthAccount[]
  emailTokens   EmailToken[]

  @@index([activeOrganizationId])
  @@index([deletedAt])
  @@map("users")
}

model Session {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  tokenHash String    @unique @map("token_hash")
  expiresAt DateTime  @map("expires_at")
  lastSeenAt DateTime? @map("last_seen_at")
  revokedAt DateTime? @map("revoked_at")

  ip        String?   @map("ip")
  userAgent String?   @map("user_agent")

  createdAt DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  memberships  Membership[]
  activeUsers  User[] @relation("UserActiveOrganization")
  invitations  Invitation[]
  subscription Subscription?

  @@map("organizations")
}

model Membership {
  id             String         @id @default(uuid())
  userId         String         @map("user_id")
  organizationId String         @map("organization_id")
  role           MembershipRole @default(member)

  createdAt DateTime @default(now()) @map("created_at")

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customRoles  MembershipRoleAssignment[]

  @@unique([userId, organizationId])
  @@index([organizationId])
  @@index([userId])
  @@map("memberships")
}

model Invitation {
  id             String         @id @default(uuid())
  organizationId String         @map("organization_id")
  email          String
  role           MembershipRole @default(member)

  tokenHash  String   @unique @map("token_hash")
  expiresAt  DateTime @map("expires_at")
  acceptedAt DateTime? @map("accepted_at")

  createdAt DateTime @default(now()) @map("created_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([email])
  @@index([expiresAt])
  @@map("invitations")
}

model Subscription {
  id             String             @id @default(uuid())
  organizationId String             @unique @map("organization_id")

  plan   SubscriptionPlan   @default(free)
  status SubscriptionStatus @default(inactive)

  providerCustomerId     String?   @unique @map("provider_customer_id")
  providerSubscriptionId String?   @unique @map("provider_subscription_id")
  currentPeriodEnd     DateTime? @map("current_period_end")
  needsReconcile       Boolean   @default(false) @map("needs_reconcile")
  lastSyncedAt         DateTime? @map("last_synced_at")
  lastProviderSnapshotAt DateTime? @map("last_provider_snapshot_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([needsReconcile, updatedAt])
  @@map("subscriptions")
}

model Role {
  id              String   @id @default(cuid())
  organizationId  String   @map("organization_id")
  key             String
  name            String
  description     String?
  createdByUserId String?  @map("created_by_user_id")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  rolePermissions RolePermission[]
  memberships     MembershipRoleAssignment[]

  @@unique([organizationId, key])
  @@index([organizationId])
  @@map("roles")
}

model Permission {
  id        String   @id @default(cuid())
  action    String
  resource  String
  condition Json?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  rolePermissions RolePermission[]

  @@unique([action, resource])
  @@map("permissions")
}

model RolePermission {
  roleId       String   @map("role_id")
  permissionId String   @map("permission_id")
  createdAt    DateTime @default(now()) @map("created_at")

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@index([permissionId])
  @@map("role_permissions")
}

model MembershipRoleAssignment {
  membershipId String   @map("membership_id")
  roleId       String   @map("role_id")
  createdAt    DateTime @default(now()) @map("created_at")

  membership Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([membershipId, roleId])
  @@index([roleId])
  @@map("membership_roles")
}

model BillingWebhookEvent {
  id                  String   @id @default(cuid())
  provider            String   @default("stripe")
  eventId             String   @unique @map("event_id")
  eventType           String   @map("event_type")
  eventCreatedAt      DateTime @map("event_created_at")
  organizationId      String?  @map("organization_id")
  providerSubscriptionId String? @map("provider_subscription_id")
  status              String   @default("received")
  errorMessage        String?  @map("error_message")
  payload             Json?
  deliveryAttempts    Int      @default(0) @map("delivery_attempts")
  lastAttemptAt       DateTime? @map("last_attempt_at")
  receivedAt          DateTime @default(now()) @map("received_at")
  processedAt         DateTime? @map("processed_at")

  @@index([eventCreatedAt])
  @@index([organizationId, receivedAt])
  @@index([providerSubscriptionId, eventCreatedAt])
  @@map("billing_webhook_events")
}

model BillingSubscriptionCursor {
  id                  String   @id @default(cuid())
  providerSubscriptionId String  @unique @map("provider_subscription_id")
  lastEventId         String   @map("last_event_id")
  lastEventType       String   @map("last_event_type")
  lastEventCreatedAt  DateTime @map("last_event_created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  @@index([lastEventCreatedAt])
  @@map("billing_subscription_cursors")
}

model AuditLog {
  id             String   @id @default(cuid())
  actorUserId    String?  @map("actor_user_id")
  organizationId String?  @map("organization_id")
  action         String
  targetType     String?  @map("target_type")
  targetId       String?  @map("target_id")
  result         String
  ip             String?
  userAgent      String?  @map("user_agent")
  traceId        String?  @map("trace_id")
  metadata       Json?
  createdAt      DateTime @default(now()) @map("created_at")

  @@index([organizationId, createdAt])
  @@index([actorUserId, createdAt])
  @@index([action, createdAt])
  @@map("audit_logs")
}

model EmailToken {
  id        String         @id @default(uuid())
  email     String
  userId    String?        @map("user_id")
  type      EmailTokenType

  tokenHash String   @unique @map("token_hash")
  expiresAt DateTime @map("expires_at")
  usedAt    DateTime? @map("used_at")

  createdAt DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([expiresAt])
  @@index([type])
  @@map("email_tokens")
}

model OAuthAccount {
  id                String        @id @default(uuid())
  userId            String        @map("user_id")
  provider          OAuthProvider
  providerAccountId String        @map("provider_account_id")
  email             String?
  lastUsedAt        DateTime?     @map("last_used_at")

  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@index([provider])
  @@map("oauth_accounts")
}

model OAuthState {
  id        String        @id @default(uuid())
  provider  OAuthProvider

  stateHash     String @unique @map("state_hash")
  codeVerifier  String @map("code_verifier")

  redirectUri String   @map("redirect_uri")
  expiresAt   DateTime @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([provider])
  @@index([expiresAt])
  @@map("oauth_states")
}

model AuthRateLimitBucket {
  id          String   @id @default(cuid())
  key         String
  windowStart DateTime @map("window_start")
  count       Int      @default(0)

  @@unique([key, windowStart])
  @@index([key, windowStart])
  @@map("auth_rate_limit_buckets")
}
