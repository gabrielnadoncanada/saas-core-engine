{
  "name": "saas-core-engine",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "setup": "tsx scripts/setup.ts",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "preflight:prod": "tsx tooling/scripts/preflight-prod.ts",
    "simulate:v2:incidents": "tsx tooling/scripts/v2-incident-sim.ts",
    "simulate:v3:incidents": "tsx tooling/scripts/v3-incident-sim.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:push": "pnpm --filter ./packages/db run db:push",
    "db:seed": "pnpm --filter ./packages/db run seed"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unused-imports": "^4.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.0",
    "tsx": "^4.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0"
  }
}
