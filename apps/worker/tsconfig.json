{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../web/src/*"],
      "@ai-core": ["../../packages/ai-core/src/index.ts"],
      "@ai-core/*": ["../../packages/ai-core/src/*"],
      "@auth-core": ["../../packages/auth-core/src/index.ts"],
      "@auth-core/*": ["../../packages/auth-core/src/*"],
      "@billing-core": ["../../packages/billing-core/src/index.ts"],
      "@billing-core/*": ["../../packages/billing-core/src/*"],
      "@contracts": ["../../packages/contracts/src/index.ts"],
      "@contracts/*": ["../../packages/contracts/src/*"],
      "@db": ["../../packages/db/src/index.ts"],
      "@db/*": ["../../packages/db/src/*"],
      "@email": ["../../packages/email/src/index.ts"],
      "@email/*": ["../../packages/email/src/*"],
      "@jobs-core": ["../../packages/jobs-core/src/index.ts"],
      "@jobs-core/*": ["../../packages/jobs-core/src/*"],
      "@org-core": ["../../packages/org-core/src/index.ts"],
      "@org-core/*": ["../../packages/org-core/src/*"],
      "@rbac-core": ["../../packages/rbac-core/src/index.ts"],
      "@rbac-core/*": ["../../packages/rbac-core/src/*"],
      "@ui": ["../../packages/ui/src/index.ts"],
      "@ui/*": ["../../packages/ui/src/*"],
      "server-only": ["./src/shims/server-only.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
