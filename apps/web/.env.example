# App
NODE_ENV=development
APP_NAME="SaaS Core Engine"
APP_URL="http://localhost:3000"

# Cookie/security
SESSION_COOKIE_NAME="session"
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE="lax"
SESSION_TTL_DAYS=30
SESSION_IDLE_TIMEOUT_MINUTES=120
TOKEN_PEPPER="change-me-to-a-long-random-string-at-least-32-chars"
TRUST_PROXY_HEADERS=false
LOG_LEVEL=info
HSTS_MAX_AGE_SECONDS=31536000
DEMO_MODE=true

# Database (used by the app runtime)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/saas_core?schema=public"

# Email provider (choose one)
EMAIL_FROM="SaaS Core <no-reply@example.com>"
RESEND_API_KEY="re_..."
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="user"
SMTP_PASS="pass"

# OAuth (Google)
GOOGLE_OAUTH_CLIENT_ID="..."
GOOGLE_OAUTH_CLIENT_SECRET="..."
GOOGLE_OAUTH_REDIRECT_URI="http://localhost:3000/api/auth/oauth/google/callback"
GOOGLE_OAUTH_SCOPES="openid email profile"

# OAuth (GitHub)
GITHUB_OAUTH_CLIENT_ID="..."
GITHUB_OAUTH_CLIENT_SECRET="..."
GITHUB_OAUTH_REDIRECT_URI="http://localhost:3000/api/auth/oauth/github/callback"
GITHUB_OAUTH_SCOPES="read:user user:email"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_PRICE_PRO_MONTHLY="price_..."
STRIPE_PRICE_PRO_YEARLY="price_..."
STRIPE_SUCCESS_URL="http://localhost:3000/dashboard/billing?checkout=success"
STRIPE_CANCEL_URL="http://localhost:3000/dashboard/billing?checkout=cancel"

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_RETENTION_SECONDS=86400
