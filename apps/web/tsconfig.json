{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,

    "jsx": "preserve",
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@contracts/*": ["../../packages/contracts/src/*"],
      "@db/*": ["../../packages/db/src/*"],
      "@auth-core/*": ["../../packages/auth-core/src/*"],
      "@org-core/*": ["../../packages/org-core/src/*"],
      "@billing-core/*": ["../../packages/billing-core/src/*"],
      "@email/*": ["../../packages/email/src/*"],
      "@ui/*": ["../../packages/ui/src/*"]
    }
  },
  "references": [
    { "path": "../../packages/contracts" },
    { "path": "../../packages/db" },
    { "path": "../../packages/auth-core" },
    { "path": "../../packages/org-core" },
    { "path": "../../packages/billing-core" },
    { "path": "../../packages/email" },
    { "path": "../../packages/ui" }
  ],
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
